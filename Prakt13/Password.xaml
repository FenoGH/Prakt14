<Window x:Class="Prakt13.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prakt13"
        mc:Ignorable="d"
    Title="Авторизация" Height="180" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Closing="Window_Closing">

    <Grid>
        <PasswordBox x:Name="txtPas" PasswordChar="*" Width="280" Height="29" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,41,0,0" ></PasswordBox>
        <Label Content="Введите пароль" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="104"/>
        <Button Content="Войти" Click="Login_Click" HorizontalAlignment="Center" Margin="0,75,0,0" VerticalAlignment="Top" Width="280" Height="29"/>
        <Button Content="Отмена" Click="Esc_Click" HorizontalAlignment="Center" Margin="0,109,0,0" VerticalAlignment="Top" Width="280" Height="29"/>

    </Grid>
</Window>
